@model BookShop.Models.Message

@{
    ViewBag.Title = "Send";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group" style="height:40px;margin-top:50px">
        <div class="row">
            @Html.LabelFor(m => m.Receiver, new { @class = "col-md-5 control-label", @style = "text-align:right", @for = "收件人" })
            <div class=" col-md-7">
                @Html.TextBoxFor(m => m.Receiver, new { @class = "form-control", placeholder = "收件人", @style = "width:240px;", id = "bookname" })
                @Html.ValidationMessageFor(m => m.Receiver)
            </div>
        </div>
    </div>
    <div class="form-group" style="height:40px;margin-top:30px">
        <div class="row">
            @Html.LabelFor(m => m.Content, new { @class = "col-md-5 control-label", @style = "text-align:right", @for = "内容" })
            <div class=" col-md-7">
                @Html.TextBoxFor(m => m.Content, new { @class = "form-control", placeholder = "内容", @style = "width:240px;", id = "nickname" })
                @Html.ValidationMessageFor(m => m.Content)
            </div>
        </div>
    </div>
    <div class="form-group" style="height:40px;margin-top:30px">
        <div class="col-md-5"></div>
        <div class="col-md-2 col-xs-4">
            <input type="submit" value=" 发件" class="btn btn-default" />
        </div>
    </div>
}
